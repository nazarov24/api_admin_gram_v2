{
    "openapi": "3.0.0",
    "info": {
        "title": "API Documentation",
        "description": "Документация API для управления ролями и разрешениями",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Login"
                ],
                "summary": "Авторизация и получение токена",
                "operationId": "391ff20c319bb76c327863f160ad6494",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "operator@example.com"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Пароль пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "operator123"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Токен аутентификации",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "your-jwt-token-here"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Неверные учетные данные",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Register"
                ],
                "summary": "Регистрация нового пользователя с ролью",
                "operationId": "e46989b9a36c4a6bb55e9119974a1360",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Имя пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Operator User"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email",
                            "example": "operator@example.com"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Пароль пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "operator123"
                        }
                    },
                    {
                        "name": "password_confirmation",
                        "in": "query",
                        "description": "Подтверждение пароля",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "operator123"
                        }
                    },
                    {
                        "name": "role",
                        "in": "query",
                        "description": "Роль пользователя",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "operator"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Пользователь успешно зарегистрирован",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Operator User"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "operator@example.com"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "operator"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Ошибка валидации",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The email field is required."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Login",
            "description": "Login"
        },
        {
            "name": "Register",
            "description": "Register"
        }
    ]
}